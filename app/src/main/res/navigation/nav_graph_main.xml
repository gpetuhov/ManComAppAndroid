<?xml version="1.0" encoding="utf-8"?>

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="ru.mancomapp.ui.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_requestsFragment"
            app:destination="@id/requestsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim" />
        <action
            android:id="@+id/action_homeFragment_to_securityFragment"
            app:destination="@id/securityFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim" />
        <action
            android:id="@+id/action_homeFragment_to_paymentsFragment"
            app:destination="@id/paymentsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim" />
    </fragment>

    <fragment
        android:id="@+id/requestsFragment"
        android:name="ru.mancomapp.ui.requests.RequestsFragment"
        android:label="RequestsFragment"
        tools:layout="@layout/fragment_requests" />

    <fragment
        android:id="@+id/securityFragment"
        android:name="ru.mancomapp.ui.security.SecurityFragment"
        android:label="SecurityFragment"
        tools:layout="@layout/fragment_security" />

    <fragment
        android:id="@+id/paymentsFragment"
        android:name="ru.mancomapp.ui.payments.PaymentsFragment"
        android:label="PaymentsFragment"
        tools:layout="@layout/fragment_payments" />

</navigation>