<?xml version="1.0" encoding="utf-8"?>

<!-- Alcon -->

<resources>

    <style name="AppTheme.LoginActivity" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/md_white_1000</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorSecondary">@color/pantone_407c</item>
        <item name="colorSecondaryVariant">@color/pantone_411c</item>
    </style>

    <style name="AppTheme.MainActivity" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/md_white_1000</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorSecondary">@color/pantone_407c</item>
        <item name="colorSecondaryVariant">@color/pantone_411c</item>
    </style>

    <style name="TextStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/pantone_411c</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/pantone_411c</item>
        <item name="android:textStyle">normal</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">13sp</item>
        <item name="backgroundTint">@color/pantone_7499c</item>
    </style>

    <style name="EditStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/pantone_411c</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>

</resources>